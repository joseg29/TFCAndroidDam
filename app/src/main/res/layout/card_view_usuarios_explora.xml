<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="15dp"
        android:background="@drawable/carta_redonda_usuario"
        android:orientation="vertical">

        <View
            android:id="@+id/viewSombra"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:background="@drawable/corners_imagen_usuario_explora" />

        <TextView

            android:id="@+id/textView3"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/gotham_medium_1"
            android:layout_marginTop="190dp"
            android:text="#TRAP/#RAP/"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:orientation="vertical">
            <!--
            AÑADIR IMAGEN DEL USUARIO DE OFNDO
            -->

            <ImageView

                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/corners_imagen_usuario_explora"
                android:clipToOutline="true"
                android:elevation="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/mandado" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/carta_redonda_usuario2"
                android:backgroundTint="#23000000"
                android:elevation="2dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="44dp"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:background="#00FFFFFF"
                android:elevation="5dp"
                android:foreground="@android:drawable/stat_notify_more"
                android:foregroundTint="#FF0000"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/txtNombreUsu"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="130dp"
                android:elevation="10dp"
                android:fontFamily="@font/gotham_bold"
                android:gravity="center_vertical"
                android:text="SAMU EL JEDI"
                android:textColor="@color/white"
                android:textSize="40sp" />



        </RelativeLayout>

        <!--
        AQUI HAY QUE AÑADIR ALGO SOBRE LAS VALOARCIONES
        -->
    </RelativeLayout>



</androidx.cardview.widget.CardView>