<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/principalLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/imVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitXY" />

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#86130527" />

    <TextView
        android:id="@+id/lblEmail"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/gotham_bold_1"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="313dp"
        android:layout_height="50dp"
        android:layout_below="@id/lblEmail"
        android:layout_centerInParent="true"
        android:layout_marginBottom="7dp"
        android:alpha=".8"
        android:background="@drawable/edit_text_redondo"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/lblPassword"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmail"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/gotham_bold_1"
        android:text="Contraseña"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="313dp"
        android:layout_height="50dp"
        android:layout_below="@id/lblPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:alpha=".8"
        android:background="@drawable/edit_text_redondo"
        android:ems="10"
        android:inputType="textPassword|textVisiblePassword"
        android:textAlignment="center"
        android:textColor="#000000" />

    <ImageButton
        android:id="@+id/btnMostrarContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="-25dp"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:src="@null" />


    <TextView
        android:id="@+id/linkForgetPassword"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:layout_centerInParent="true"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/gotham_medium_1"
        android:text="¿Olvidaste tu contraseña?"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linkForgetPassword"
        android:layout_centerInParent="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        android:alpha=".8"
        android:background="@drawable/boton_redondo"
        android:fontFamily="@font/gotham_bold_1"
        android:text="Iniciar Sesión"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/linkRegistrate"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIniciarSesion"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/gotham_medium_1"
        android:text="¿No tienes cuenta? Regístrate"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp" />


</RelativeLayout>