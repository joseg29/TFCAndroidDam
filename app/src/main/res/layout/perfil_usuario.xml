<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0800BCD4"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="14dp"
    tools:context=".Registro">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnInstagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/logo_instagram" />

        <ImageButton
            android:id="@+id/btnTikTok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/logo_tiktok" />

        <ImageButton
            android:id="@+id/btnYoutube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/logo_youtube" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblEmail"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lblNombreUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lblDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCanciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/botonAltaMensaje"
        android:layout_width="57dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fondo_boton_play"
        android:onClick="seleccionarAudio"
        android:src="@drawable/add"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#DC1414"
        android:text="Cerrar SesiÃ³n" />

    <Button
        android:id="@+id/btnCardviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pasarActivity" />

</LinearLayout>