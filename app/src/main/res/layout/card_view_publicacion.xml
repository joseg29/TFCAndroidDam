<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:backgroundTint="#DCDCDC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_perfil_publicacion"
                android:layout_width="118dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:background="#000000"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/autor_publicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:text="Autor" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_publicacion"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="118dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:text="lorem pisumlorem pisumlorem pisumlorem pisumlorem pisumlorem pisumlorem pisumlorem pisumlorem pisumlorem pisumlorem pisumlorem pisumlorem pisumlorem pisumlorem pisumlorem "
            android:textAlignment="textStart" />

        <ImageView
            android:id="@+id/img_publicacion"
            android:layout_width="226dp"
            android:layout_height="178dp"
            android:layout_marginLeft="118dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/fecha_publicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="textEnd" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>